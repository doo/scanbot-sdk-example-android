<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:showIn="@layout/activity_idcard_scanner_result">

    <TextView
            android:id="@+id/fieldType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:textSize="19sp"
            tools:text="Field type: Address" />

    <ImageView
            android:id="@+id/fieldCroppedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

    <TextView
            android:id="@+id/fieldTextConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            tools:text="Recognized text with confidence 92.00%" />

    <TextView
            android:id="@+id/fieldScannedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="22sp"
            tools:text="51147 KOLN\nHEIDESTRASSE 17" />
</LinearLayout>
